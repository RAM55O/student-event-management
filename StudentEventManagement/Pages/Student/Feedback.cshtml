@page
@model StudentEventManagement.Pages.Student.FeedbackModel

@{
    ViewData["Title"] = "Submit Feedback";
}

<h1>Submit Feedback</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Feedback.EventId" class="control-label">Event</label>
                <select asp-for="Feedback.EventId" class="form-control" asp-items="Model.EventList">
                    <option value="">-- Select Event --</option>
                </select>
                <span asp-validation-for="Feedback.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rating</label>
                <div class="rating">
                    <input type="radio" id="star5" name="Feedback.Rating" value="5" asp-for="Feedback.Rating" /><label for="star5" title="5 stars"></label>
                    <input type="radio" id="star4" name="Feedback.Rating" value="4" asp-for="Feedback.Rating" /><label for="star4" title="4 stars"></label>
                    <input type="radio" id="star3" name="Feedback.Rating" value="3" asp-for="Feedback.Rating" /><label for="star3" title="3 stars"></label>
                    <input type="radio" id="star2" name="Feedback.Rating" value="2" asp-for="Feedback.Rating" /><label for="star2" title="2 stars"></label>
                    <input type="radio" id="star1" name="Feedback.Rating" value="1" asp-for="Feedback.Rating" /><label for="star1" title="1 star"></label>
                </div>
                <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.ImproveSuggestion" class="control-label"></label>
                <textarea asp-for="Feedback.ImproveSuggestion" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Feedback.ImproveSuggestion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Submit Feedback" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p class="mt-3"><a href="/Student/Index" class="btn btn-secondary">Back to Event List</a></p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
