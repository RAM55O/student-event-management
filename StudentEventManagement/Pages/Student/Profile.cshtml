@page
@model StudentEventManagement.Pages.Student.ProfileModel

@{
    ViewData["Title"] = "Student Profile";
}

<h1>Student Profile</h1>

@if (Model.StudentUser != null)
{
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="StudentUser.Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StudentUser.Username"></label>
                    <input asp-for="StudentUser.Username" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="StudentUser.Role"></label>
                    <input asp-for="StudentUser.Role" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="StudentUser.FirstName"></label>
                    <input asp-for="StudentUser.FirstName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="StudentUser.Surname"></label>
                    <input asp-for="StudentUser.Surname" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="StudentUser.MobileNumber"></label>
                    <input asp-for="StudentUser.MobileNumber" class="form-control" />
                    <span asp-validation-for="StudentUser.MobileNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentUser.Email"></label>
                    <input asp-for="StudentUser.Email" class="form-control" />
                    <span asp-validation-for="StudentUser.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
            </div>
        </div>
    </form>
    <div class="mt-3">
        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>
}
else
{
    <p>Student user not found.</p>
}

<p><a href="/Student/Index" class="btn btn-secondary">Back to Student Home</a></p>