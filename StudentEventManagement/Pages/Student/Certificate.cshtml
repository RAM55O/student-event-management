@page
@model StudentEventManagement.Pages.Student.CertificateModel
@{
    Layout = null; // No layout for the certificate page
}

<!DOCTYPE html>
<html>
<head>
    <title>Certificate of Participation</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align: center;
        }

        .certificate-container {
            width: 800px;
            margin: 50px auto;
            border: 10px solid #007bff;
            padding: 50px;
            background-color: #f8f9fa;
            position: relative;
        }

        .logo {
            width: 100px;
            height: 100px;
            background-color: #007bff;
            color: white;
            font-size: 24px;
            line-height: 100px;
            border-radius: 50%;
            margin: 0 auto 20px;
        }

        h1 {
            font-size: 48px;
            color: #007bff;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .event-name {
            font-style: italic;
            font-weight: bold;
        }

        .date {
            position: absolute;
            bottom: 50px;
            left: 50px;
        }

        .signature {
            position: absolute;
            bottom: 50px;
            right: 50px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="certificate-container">
        <div class="logo">SEM</div>
        <h1>Certificate of Participation</h1>
        <p>This is to certify that</p>
        @if(Model.CertificateUser != null)
        {
            <h2>@Model.CertificateUser.FirstName @Model.CertificateUser.Surname</h2>
        }
        <p>has successfully participated in the event</p>
        @if(Model.Event != null)
        {
            <p class="event-name">@Model.Event.Title</p>
            <div class="date">
                <p>Date: @Model.Event.Date.ToString("yyyy-MM-dd")</p>
            </div>
        }
        <div class="signature">
            <p>_________________________</p>
            <p>Event Coordinator</p>
        </div>
    </div>
</body>
</html>
