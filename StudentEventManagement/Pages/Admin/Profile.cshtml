@page
@model StudentEventManagement.Pages.Admin.ProfileModel

@{
    ViewData["Title"] = "Admin Profile";
}

<h1>Admin Profile</h1>

@if (Model.AdminUser != null)
{
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="AdminUser.Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="AdminUser.Username"></label>
                    <input asp-for="AdminUser.Username" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="AdminUser.Role"></label>
                    <input asp-for="AdminUser.Role" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="AdminUser.FirstName"></label>
                    <input asp-for="AdminUser.FirstName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="AdminUser.Surname"></label>
                    <input asp-for="AdminUser.Surname" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="AdminUser.MobileNumber"></label>
                    <input asp-for="AdminUser.MobileNumber" class="form-control" />
                    <span asp-validation-for="AdminUser.MobileNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdminUser.Email"></label>
                    <input asp-for="AdminUser.Email" class="form-control" />
                    <span asp-validation-for="AdminUser.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
            </div>
        </div>
    </form>
    <div class="mt-3">
        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>
}
else
{
    <p>Admin user not found.</p>
}

<p><a href="/Admin/Index" class="btn btn-secondary">Back to Admin Home</a></p>